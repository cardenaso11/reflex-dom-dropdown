#!/usr/bin/env bash
# Load the Nix dev shell only on Linux. No-op on macOS.

case "$(uname -s)" in
  Linux*)
    # Requires nix-direnv. If nix-direnv is installed globally, `use nix` will
    # pick up ./shell.nix automatically. Otherwise, this line is a no-op.
    use nix
    ;;
  *)
    # macOS or other platforms: do nothing.
    :
    ;;
esac

